<UserControl x:Class="RPM_Project1.CarsRedact"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RPM_Project1"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300">
        <Border CornerRadius="15" Background="#1a1a1a" Margin="20">
    
            <StackPanel Margin="30">
                <TextBlock Foreground="White" x:Name="TextBox" FontSize="20" HorizontalAlignment="Center"></TextBlock>
                <Image x:Name="Image" Width="300" Height="150" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Width="300" Height="35" Background="#42AEBC" FontSize="20" Click="Button_Click">
                    Информация
                </Button>
                <TextBlock Foreground="White" x:Name="Id"></TextBlock>
            </StackPanel>
   
            </Border>
</UserControl>
